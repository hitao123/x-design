{
  "name": "@x-design/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "X Design - PC Vue 3 Component Library",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter @x-design/docs dev",
    "build": "pnpm --filter ./packages/* build",
    "build:docs": "pnpm --filter @x-design/docs build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint --ext .vue,.js,.ts,.jsx,.tsx .",
    "lint:fix": "eslint --ext .vue,.js,.ts,.jsx,.tsx . --fix",
    "format": "prettier --write \"**/*.{vue,ts,tsx,js,jsx,json,md}\"",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.18.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.0.0",
    "vue": "^3.3.8",
    "vue-tsc": "^1.8.25"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
